{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Memory Quantity",
  "description": "A quantity of memory, expressed with a unit.",
  "anyOf": [
    {
      "minimum": 0,
      "type": "number",
      "multipleOf": 1.0
    },
    {
      "pattern": "[0-9]+[BKMGbkmg]",
      "type": "string"
    }
  ]
}