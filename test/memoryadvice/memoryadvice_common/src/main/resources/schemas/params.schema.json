{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Params",
  "description": "A set of parameters to configure the stress test application.",
  "additionalProperties": false,
  "properties": {
    "apk_base": {
      "type": "string"
    },
    "apk_name": {
      "type": "string"
    },
    "firebase": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": ["string", "number", "boolean"]
        }
      }
    },
    "glTest": {
      "$ref": "memoryQuantity.schema.json"
    },
    "malloc": {
      "$ref": "memoryQuantity.schema.json"
    },
    "vkTest": {
      "$ref": "memoryQuantity.schema.json"
    },
    "maxConsumer": {
      "$ref": "memoryQuantity.schema.json"
    },
    "orientation": {
      "enum": [
        "landscape",
        "portrait"
      ],
      "type": "string"
    },
    "serviceBlocker": {
      "type": "boolean"
    },
    "maxMillisecondsPerSecond": {
      "minimum": 0,
      "maximum": 1000,
      "type": "number"
    },
    "minimumFrequency": {
      "minimum": 0,
      "type": "number"
    },
    "maximumFrequency": {
      "minimum": 0,
      "type": "number"
    },
    "timeout": {
      "$ref": "duration.schema.json"
    },
    "switchTest": {
      "description": "Enables a test where the stress application is put into the background by launching another app.",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "launchDuration": {
          "$ref": "duration.schema.json"
        },
        "returnDuration": {
          "$ref": "duration.schema.json"
        }
      },
      "required": [
        "enabled"
      ],
      "type": "object"
    },
    "advisorParameters": {
      "$ref": "advisorParameters.schema.json"
    },
    "package": {
      "type": "string"
    }
  },
  "type": "object"
}