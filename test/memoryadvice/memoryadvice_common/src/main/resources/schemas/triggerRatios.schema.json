{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Trigger Ratios",
  "description": "Trigger values for a heuristic based on ratios of the estimated full range of a metric.",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "red": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    },
    "yellow": {
      "maximum": 1,
      "minimum": 0,
      "type": "number"
    }
  },
  "required": [
    "red",
    "yellow"
  ]
}
