{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Advisor parameters",
  "description": "Configuration for the memory advisor.",
  "additionalProperties": false,
  "properties": {
    "onDeviceStressTest": {
      "description": "Configuration for a stress test performed on initialization.",
      "properties": {
        "segmentSize": {
          "description": "How much memory to allocate on each iteration.",
          "allOf": [
            {
              "$ref": "memoryQuantity.schema.json"
            }
          ]
        }
      },
      "type": "object"
    },
    "predictOomLimit": {
      "description": "Enables on-device prediction of the oom_score limit.",
      "type": "boolean"
    },
    "matchStrategy": {
      "description": "The algorithm to use when identifying the closest matching profile to a device.",
      "enum": [
        "baseline",
        "fingerprint"
      ]
    },
    "metrics": {
      "$ref": "monitorParameters.schema.json"
    },
    "heuristics": {
      "$ref": "heuristics.schema.json"
    },
    "predictions": {
      "$ref": "predictionsSpec.schema.json"
    }
  },
  "type": "object",
  "required": ["metrics"],
  "examples": [
    {
      "matchStrategy": "fingerprint",
      "metrics": {
        "baseline": {
          "debug": true
        },
        "variable": {
          "canaryProcessTester": {
            "memory": "256M"
          }
        }
      },
      "heuristics": {
        "try": "256M",
        "canaryProcessTester": true,
        "VmRSS": {
          "limit": {
            "red": 0.85,
            "yellow": 0.75
          }
        }
      },
      "predictions": {
        "oom_score": true
      }
    }
  ]
}