<idea-plugin>
    <name>Android Performance Tuner</name>
    <vendor>Google</vendor>

    <description><![CDATA[Android Performance Tuner plugin for Android Studio
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="OpenPluginAction" class="OpenPluginAction" text="Android Performance Tuner"
          description="Open APT Plugin">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>